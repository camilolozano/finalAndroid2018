<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lozano.camilo.shop.DetailsMap">

    <fragment
        android:id="@+id/mapCompany"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DistancePoinst"
        android:padding="@dimen/marginElements"
        android:layout_margin="@dimen/marginElements"
        android:background="@drawable/stylebutton"
        app:layout_anchor="@+id/mapCompany"
        app:layout_anchorGravity="bottom|center" />

</android.support.design.widget.CoordinatorLayout>
