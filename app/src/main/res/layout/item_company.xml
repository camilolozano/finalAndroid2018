<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idCad"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginLayouts"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/PhotoComp"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_img"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                app:border_color="#FF000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descripcion "
                    android:textSize="@dimen/text_title" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/statusChat"
                android:layout_gravity="center"
                android:layout_width="@dimen/dim_float"
                android:layout_height="@dimen/dim_float"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@color/chatcolor"
                app:border_color="@color/bodercolor"
                app:border_width="1dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>