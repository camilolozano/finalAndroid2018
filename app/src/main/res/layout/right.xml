<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/marginElements"
        app:cardBackgroundColor="@color/chatcolor"
        card_view:cardCornerRadius="@dimen/radiuscardMessage"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/linerMesg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginLayouts"
            android:orientation="vertical"
            android:padding="@dimen/marginLayouts">


            <TextView
                android:id="@+id/nameSendMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del envio"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msgSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Perez"
                android:textSize="@dimen/text_title"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/hourMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="20:80"
                android:textSize="@dimen/text_description" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>